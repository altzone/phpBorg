[Unit]
Description=phpBorg Backup Worker #%i - Executes backup and maintenance jobs
After=network.target redis-server.service mariadb.service phpborg-scheduler.service
Wants=redis-server.service mariadb.service
PartOf=phpborg-workers.target

[Service]
Type=simple
User=phpborg
Group=phpborg
WorkingDirectory=/opt/newphpborg/phpBorg
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Environment="WORKER_ID=%i"

# Main worker command
ExecStart=/usr/bin/php /opt/newphpborg/phpBorg/bin/phpborg worker:start --queue=default --worker-id=%i

# Restart policy
Restart=always
RestartSec=10

# Resource limits (per worker)
MemoryMax=2G
CPUQuota=100%

# Security
PrivateTmp=true
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/newphpborg/phpBorg/var
ReadWritePaths=/opt/newphpborg/phpBorg/logs
ReadWritePaths=/opt/newphpborg/phpBorg/.git
ReadWritePaths=/opt/backups
ReadWritePaths=/var/lib/phpborg/backups
ReadWritePaths=/var/log/phpborg
ReadWritePaths=/tmp

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=phpborg-worker-%i

[Install]
WantedBy=phpborg-workers.target
